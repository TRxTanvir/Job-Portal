{
  "version": 2,
  "builds": [
    {
      "src": "frontend/next.config.ts",
      "use": "@vercel/next",
      "config": { "distDir": "out" }
    },
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/main.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/out/$1"
    }
  ]
}
