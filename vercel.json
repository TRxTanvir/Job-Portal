{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": { "outputDirectory": "frontend" }
    },
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
